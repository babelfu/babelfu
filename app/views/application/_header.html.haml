%header
  %nav.navbar.navbar-expand-lg.navbar-light.bg-light
    .container
      %a.py-0.d-flex.align-items-center.navbar-brand{href: root_path}
        = image_tag "logo.svg", alt: "Babelfu", height: 50
        Babelfu
      - if current_user
        %ul.nav.navbar-nav.me-auto.mb-md-0.flex-row
          %li
            = link_to "Projects", projects_path, class: "nav-link px-2 text-secondary"
          %li
            = link_to "Connections", connections_path, class: "nav-link px-2 text-secondary"
      %button.navbar-toggler{type: "button", 'data-bs-toggle': "collapse", 'data-bs-target': "#navbarNav", 'aria-controls': "navbarNav", 'aria-expanded': "false", 'aria-label': "Toggle navigation"}
        %span.navbar-toggler-icon
      #navbarNav.collapse.navbar-collapse
        %ul.navbar-nav.ms-auto.mb-2.mb-l-0
          - if current_user
            %li.nav-item.dropdown
              %a.nav-link.dropdown-toggle{"aria-expanded" => "false", "data-bs-toggle" => "dropdown", href: "#", role: "button"}
                = current_user.email
              %ul.dropdown-menu
                %li
                  = link_to "Account", edit_user_registration_path, class: 'dropdown-item'
            %li.nav-item
              = link_to "Sign out", destroy_user_session_path, "data-turbo-method": :delete, class: 'nav-link'
          - else
            %li.nav-item
              = link_to "Sign in", new_user_session_path, class: 'nav-link'
            %li.nav-item
              = link_to "Sign up", new_user_registration_path, class: 'nav-link'
