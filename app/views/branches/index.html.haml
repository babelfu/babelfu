.d-flex.justify-content-between.mb-3.align-items-start
  .div
    %nav{"aria-label" => "breadcrumb"}
      %ol.breadcrumb
        %li.breadcrumb-item
          = link_to "Projects", projects_path
        %li.breadcrumb-item
          = link_to @project.name, project_path(@project)
        %li.breadcrumb-item.active{"aria-current" => "page"} Branches


.col-md-6
  .d-flex.justify-content-between.align-items-end
  - if @branches.empty?
    %p No branches
  - else
    %ul.list-group
      - @branches.each do |branch|
        %li.list-group-item.d-flex.justify-content-between.align-items-center
          = link_to branch.name, project_branch_path(@project, branch), class: 'text-decoration-none'

= paginate @branches, theme: 'bootstrap-5'
