.d-flex.justify-content-between.align-items-center
  %nav{"aria-label" => "breadcrumb"}
    %ol.breadcrumb
      %li.breadcrumb-item
        = link_to "Projects", projects_path
      %li.breadcrumb-item
        = link_to @project.name, project_path(@project)
      %li.breadcrumb-item.active{"aria-current" => "page"} Members

  .links
    = link_to "Invitations", project_invitations_path(@project)

%table.table.table-hover
  %thead
    %tr
      %th Email
      %th Github Username
  %tbody
    - @users.each do |user|
      %tr
        %td= user.email
        %td= user.github_username


= paginate @users, theme: 'bootstrap-5'
